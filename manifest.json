{
  "manifest_version": 3,
  "name": "MimiNotes",
  "short_name": "MimiNotes",
  "version": "0.0.9",
  "description": "Take smart timestamped notes while watching YouTube.",
  "permissions": ["storage", "scripting", "activeTab", "downloads"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action.default_popup": "popup.html",
  "icons": {
    "16": "mimi-logo.png",
    "48": "mimi-logo.png",
    "128": "mimi-logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "mimi-logo.png",
      "48": "mimi-logo.png",
      "128": "mimi-logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
